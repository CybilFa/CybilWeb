<main id="wishlist" class="container my-5">
    <h1 class="text-center mb-4">Your Wishlist</h1>

    <% if (message) { %>
        <div class="alert alert-success text-center"><%= message %></div>
    <% } %>

    <% if (wishlist.length > 0) { %>
        <div class="row">
            <% wishlist.forEach(product => { %>
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="/uploads/<%= product.picture %>" class="card-img-top" alt="<%= product.description %>">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title"><%= product.description %></h5>
                            <p class="card-text">Price: <strong>Rs. <%= product.price %></strong></p>

                            <form action="/add-to-cart/<%= product._id %>" method="POST" class="mb-2">
                                <button type="submit" class="btn btn-success w-100">Add to Cart</button>
                            </form>

                            <a href="/wishlist/remove/<%= product._id %>" class="btn btn-danger w-100">
                                Remove from Wishlist
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-center text-muted">Your wishlist is empty.</p>
        <div class="text-center mt-3">
  <a href="/" class="btn btn-primary">Go Back to Home</a>
</div>
    <% } %>
</main>