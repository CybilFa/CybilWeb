<h2 style="font-family: Arial, sans-serif; color: #333;">Edit Product</h2>

<form action="/admin/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data"
      style="max-width: 500px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; background-color: #f9f9f9;">
  
  <div style="margin-bottom: 15px;">
    <label for="title" style="display: block; margin-bottom: 5px; font-weight: bold;">Title:</label>
    <input type="text" id="title" name="title" value="<%= product.title %>" required
           style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
  </div>

  <div style="margin-bottom: 15px;">
    <label for="description" style="display: block; margin-bottom: 5px; font-weight: bold;">Description:</label>
    <textarea id="description" name="description" required
              style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" rows="4"><%= product.description %></textarea>
  </div>

  <div style="margin-bottom: 15px;">
    <label for="price" style="display: block; margin-bottom: 5px; font-weight: bold;">Price:</label>
    <input type="number" id="price" name="price" value="<%= product.price %>" required
           style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" />
  </div>

  <div style="margin-bottom: 15px;">
    <label style="display: block; margin-bottom: 5px; font-weight: bold;">Current Image:</label>
    <% if (product.picture) { %>
      <img src="/uploads/<%= product.picture %>" alt="Product Image"
           style="max-width: 100%; height: auto; border: 1px solid #ddd; border-radius: 5px;" />
    <% } else { %>
      <p style="color: #888;">No image uploaded.</p>
    <% } %>
  </div>

  <div style="margin-bottom: 20px;">
    <label for="image" style="display: block; margin-bottom: 5px; font-weight: bold;">Change Image:</label>
    <input type="file" id="image" name="image" accept="image/*" style="width: 100%;" />
  </div>

  <button type="submit"
          style="background-color: #28a745; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;">
    Update Product
  </button>
</form>
