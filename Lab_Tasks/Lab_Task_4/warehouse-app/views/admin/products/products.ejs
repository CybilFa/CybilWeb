<h2 style="text-align: center; font-family: Arial, sans-serif; color: #333; margin-top: 30px;">All Products</h2>

<table border="1" cellpadding="10" cellspacing="0" style="width: 90%; margin: 20px auto; border-collapse: collapse; font-family: Arial, sans-serif;">
  <thead>
    <tr style="background-color: #f2f2f2; color: #333;">
      <th style="padding: 12px; border: 1px solid #ccc;">Image</th>
      <th style="padding: 12px; border: 1px solid #ccc;">Title</th>
      <th style="padding: 12px; border: 1px solid #ccc;">Price</th>
      <th style="padding: 12px; border: 1px solid #ccc;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr style="text-align: center;">
        <td style="padding: 10px; border: 1px solid #ccc;">
          <% if (product.picture) { %>
            <img src="/uploads/<%= product.picture %>" alt="Image" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px; border: 1px solid #ddd;" />
          <% } else { %>
            <span style="color: #888;">No Image</span>
          <% } %>
        </td>
        <td style="padding: 10px; border: 1px solid #ccc;"><%= product.title %></td>
        <td style="padding: 10px; border: 1px solid #ccc;">Rs. <%= product.price %></td>
        <td style="padding: 10px; border: 1px solid #ccc;">
          <a href="/admin/products/edit/<%= product._id %>" style="color: #007bff; text-decoration: none;">Edit</a> |
          <a href="/admin/products/delete/<%= product._id %>" style="color: #dc3545; text-decoration: none;">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>